<section id="portfolio" class="portfolio">
	<h1 class="title">Portfolio</h1>
	<a class="link" href="/portfolio/new">Add a project</a>
	<div class="projects-container">
		
			<% projects.forEach(function(project){ %>
				<div class="indv-project-container">
					<div class="project-info">
						<p><%= project.title %></p>
						<p><%= project.summary %></p>
					</div>
					<img src="<%= project.image %>">
					<a class="button left-button" href="<%=project.github%>"><i class="fab fa-github"></i><span>     View Code</span></a>
					<a class="button right-button" href="/portfolio/<%=project._id%>"><span>More Info     </span><i class="fas fa-chevron-circle-right"></i></a>
				</div>
			<% }); %>		
	</div>
</section>

