<section id="portfolio" class="portfolio">
	
	<h1 class="title">Portfolio</h1>
	
	<% if(currentUser){ %>
		<a class="button" href="/portfolio/new">‚Üê Add a project</a>
	<% } %>
	
	<div class="section-container">
		
		<% if(project_error && project_error.length>0){ %>
			<div class="flash flash-error flash-margin">
				<%= project_error %>
			</div>
		<% } %>
		<% if(project_success && project_success.length>0){ %>
			<div class="flash flash-success flash-margin">
				<%= project_success %>
			</div>
		<% } %>

		<div class="projects-container">
			
				<% projects.forEach(function(project){ %>
					<div class="indv-project-container">
						<div class="project-info">
							<p><strong><%= project.title %></strong></p>
							<p><%= project.summary %></p>
						</div>
						<!--<img src="<%= project.image %>">-->
						<img class="img" style="background-image:url(<%=project.image%>)">
						<a class="button left-button" href="<%=project.github%>" target="_blank"><i class="fab fa-github"></i><span>     View Code</span></a>
						<a class="button right-button" href="/portfolio/<%=project._id%>"><span>More Info     </span><i class="fas fa-chevron-circle-right"></i></a>
					</div>
				<% }); %>		
		</div>
	</div>
</section>

<section id="contact" class="contact">
	<h1 class="title">Get In Touch</h1>
	<div class="section-container">
		<p>	Say hello via the contact form below, or by emailing me directly at <strong>hadiyahmughal@gmail.com</strong>!</p>
		<% if(email_error && email_error.length>0){ %>
			<div class="flash flash-error flash-margin">
			    <%= email_error %>
			</div>
		<% } %>
		
		<% if(email_success && email_success.length>0){ %>
			<div class="flash flash-success flash-margin">
				<%= email_success %>
			</div>
		<% } %>
	
		<form action="/send" method="POST">
			<div>
				<label>Your Name</label>
				<input type="text" name="email[name]" required>
			</div>
			<div>
				<label>Your Email Address</label>
				<input id="email" type="text" name="email[email]" required>
			</div>
			<div>
				<label>Message</label>
				<textarea class="textarea-large" name="email[message]" required></textarea>
			</div>
			<div>
				<button id="submit">Send Your Message</button>
			</div>
		</form>		
	</div>
</section>

